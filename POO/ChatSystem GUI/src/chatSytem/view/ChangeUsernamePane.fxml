<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chatSytem.view.ChangeUsernameController">
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Label text="Change Username: " translateX="25.0" translateY="44.25">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="textField" maxWidth="-Infinity" prefWidth="300.0" promptText="Enter new username…" translateX="25.0" translateY="86.5" />
            <Button fx:id="button" layoutX="142.0" layoutY="138.0" mnemonicParsing="false" onAction="#buttonHandler" text="Change">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Button>
            <Label fx:id="userTaken" layoutX="127.0" layoutY="121.0" text="Username is taken…" textFill="RED" translateX="-100.0" translateY="-5.0" visible="false">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
